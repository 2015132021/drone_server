<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="47dp"
        android:layout_height="38dp"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingTop="30dp"
        android:background="@drawable/border"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/myinfo_profile"
                android:layout_width="match_parent"
                android:layout_height="166dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/myinfo_id"
                    android:layout_width="300dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edge"
                    android:ems="10"
                    android:paddingLeft="20px"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginTop="10dp"
                    android:hint="ID"/>

                <EditText
                    android:id="@+id/myinfo_pw"
                    android:layout_width="300dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edge"
                    android:ems="10"
                    android:paddingLeft="20px"
                    android:hint="PW"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/myinfo_email"
                    android:layout_width="300dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edge"
                    android:ems="10"
                    android:paddingLeft="20px"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginTop="10dp"
                    android:hint="e-mail"/>

                <EditText
                    android:id="@+id/myinfo_phone"
                    android:layout_width="300dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edge"
                    android:ems="10"
                    android:paddingLeft="20px"
                    android:hint="010 - **** - ****"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:id="@+id/myinfo_"
                    android:layout_width="300dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edge"
                    android:ems="10"
                    android:paddingLeft="20px"
                    android:hint="추가 사항"
                    android:clickable="false"
                    android:focusable="false"
                    android:layout_marginTop="10dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/myinfo_edit"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_300"
                    android:text="수정" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/myinfo_submit"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_300"
                    android:visibility="invisible"
                    android:text="확인" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/myinfo_cancel"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_300"
                    android:visibility="invisible"
                    android:text="취소" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>